{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "jsx": "react",
    "removeComments": true,
    "declaration": true,
    "sourceMap": true,
    "inlineSources": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "newLine": "LF"
  },
  "formatCodeOptions": {
    "indentSize": 4,
    "tabSize": 4,
    "convertTabsToSpaces": true
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./test/**/*.ts",
    "./test/**/*.tsx",
    "./sample/**/*.ts",
    "./sample/**/*.tsx"
  ],
  "exclude": [
    "./node_modules/**/*.ts",
    "./typings/**/*.ts"
  ],
  "compileOnSave": true,
  "buildOnSave": true,
  "atom": {
    "rewriteTsconfig": true
  }
}
