{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "removeComments": true,
        "declaration": true,
        "sourceMap": true,
        "inlineSources": true,
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "include": [
        "./src/**/*.ts",
        "./test/**/*.ts"
    ],
    "exclude": [
        "./src/**/*.d.ts",
        "./test/**/*.d.ts",
        "./node_modules/**/*.ts",
        "./typings/**/*.ts"
    ],
    "formatCodeOptions": {
        "indentSize": 4,
        "tabSize": 4,
        "convertTabsToSpaces": true
    },
    "compileOnSave": true,
    "buildOnSave": true,
    "exclude": [],
    "atom": {
        "rewriteTsconfig": true
    }
}
