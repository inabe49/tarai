{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "jsx": "react",
        "removeComments": true,
        "declaration": true,
        "sourceMap": true,
        "inlineSources": true
    },
    "filesGlob": [
        "./src/**/*.ts",
        "!./src/**/*.d.ts",
        "./test/**/*.ts",
        "!./test/**/*.d.ts",
        "!./node_modules/**/*.ts",
        "!./typings/**/*.ts"
    ],
    "formatCodeOptions": {
        "indentSize": 4,
        "tabSize": 4,
        "convertTabsToSpaces": true
    },
    "files": [
        "./src/binder.ts",
        "./src/callback.ts",
        "./src/dispatcher.ts",
        "./src/store.ts",
        "./src/tarai.ts",
        "./test/test.ts"
    ],
    "compileOnSave": true,
    "buildOnSave": true,
    "exclude": [],
    "atom": {
        "rewriteTsconfig": true
    }
}
