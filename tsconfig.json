{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "jsx": "react",
    "removeComments": true,
    "declaration": true,
    "sourceMap": true,
    "inlineSources": true
  },
  "filesGlob": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "!./src/**/*.d.ts",
    "./test/**/*.ts",
    "!./test/**/*.d.ts",
    "./sample/**/*.ts",
    "./sample/**/*.tsx",
    "!./sample/**/*.d.ts",
    "!./node_modules/**/*.ts",
    "!./typings/**/*.ts"
  ],
  "formatCodeOptions": {
    "indentSize": 4,
    "tabSize": 4,
    "convertTabsToSpaces": true
  },
  "files": [
    "./src/action.ts",
    "./src/binder.ts",
    "./src/callback.ts",
    "./src/dispatcher.ts",
    "./src/store.ts",
    "./src/tarai.ts",
    "./src/utils/merge.ts",
    "./test/test.ts",
    "./test/utils/merge/array.ts",
    "./test/utils/merge/primitives.ts",
    "./test/utils/merge/ref.ts",
    "./test/utils/merge/state.ts",
    "./test/utils/merge/sub-state.ts",
    "./sample/01_spin/ts/sample.ts",
    "./sample/02_sub_store/ts/model.ts",
    "./sample/02_sub_store/ts/page.ts",
    "./sample/02_sub_store/ts/props/form-controls/todo-title-editor.ts",
    "./sample/02_sub_store/ts/props/forms/todo-editor.ts",
    "./sample/02_sub_store/ts/state/form-controls/todo-title-editor.ts",
    "./sample/02_sub_store/ts/state/forms/todo-editor.ts",
    "./sample/02_sub_store/ts/stores/forms/todo-editor.ts",
    "./sample/03_react_test/ts/index.ts",
    "./sample/01_spin/ts/spin.tsx",
    "./sample/02_sub_store/ts/components/form-controls/todo-title-editor.tsx",
    "./sample/02_sub_store/ts/components/forms/todo-editor.tsx",
    "./sample/03_react_test/ts/component.tsx"
  ],
  "compileOnSave": true,
  "buildOnSave": true,
  "exclude": [],
  "atom": {
    "rewriteTsconfig": true
  }
}
